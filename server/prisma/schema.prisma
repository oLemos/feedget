generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Feedback {
    id String @id @default(uuid())

    type       String
    comment    String
    screenshot String?

    @@map("feedbacks")
}

// Para cada máquina nova:
// - Criar um .env com variável acima com o valor: "file:./dev.db",
// - Rodar o comando: npx prisma generate
